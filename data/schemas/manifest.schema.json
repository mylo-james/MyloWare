{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://myloware.dev/schemas/manifest.json",
  "title": "Manifest",
  "description": "Registry of all data artifacts",
  "type": "object",
  "required": ["version", "artifacts"],
  "properties": {
    "version": {
      "type": "string",
      "description": "Manifest version (ISO date)"
    },
    "artifacts": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["type", "id", "path"],
        "properties": {
          "type": {
            "type": "string",
            "enum": ["persona", "project", "guardrail", "workflow", "workflow-node"],
            "description": "Artifact type"
          },
          "id": {
            "type": "string",
            "description": "Unique identifier"
          },
          "path": {
            "type": "string",
            "description": "Relative path from data/v1/"
          },
          "version": {
            "type": "string",
            "description": "Artifact version"
          },
          "dependencies": {
            "type": "array",
            "items": {
              "type": "string"
            },
            "description": "IDs of artifacts this depends on"
          }
        }
      }
    }
  },
  "additionalProperties": false
}

