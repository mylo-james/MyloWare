{
  "name": "myloware",
  "version": "1.0.0",
  "private": true,
  "description": "MyloWare - AI-powered workflow automation platform",
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "build": "npm run build --workspaces",
    "test": "npm run test --workspaces",
    "lint": "npm run lint --workspaces",
    "format": "prettier --write \"**/*.{ts,tsx,js,jsx,json,md}\"",
    "format:check": "prettier --check \"**/*.{ts,tsx,js,jsx,json,md}\"",
    "dev": "docker-compose up -d",
    "dev:down": "docker-compose down",
    "clean": "npm run clean --workspaces",
    "prepare": "husky install",
    "pre-commit": "lint-staged",
    "pre-push": "npm run format:check && npm run build && npm run test",
    "hitl:success": "node scripts/hitl-notify.js --priority=1 --title=\"MyloWare Workflow Success\"",
    "hitl:failure": "node scripts/hitl-notify.js --priority=2 --title=\"MyloWare Workflow Failure\"",
    "build:watch": "tsc --watch",
    "dev:watch": "nodemon --watch src --ext ts,js --exec \"npm run build\""
  },
  "devDependencies": {
    "@types/node": "^20.11.0",
    "@typescript-eslint/eslint-plugin": "^6.18.1",
    "@typescript-eslint/parser": "^6.18.1",
    "eslint": "8.56.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.1.3",
    "husky": "^8.0.3",
    "jest": "^29.7.0",
    "lint-staged": "^15.2.0",
    "prettier": "^3.2.4",
    "typescript": "^5.3.3"
  },
  "engines": {
    "node": ">=20.11.0",
    "npm": ">=10.0.0"
  },
  "keywords": [
    "ai",
    "workflow",
    "automation",
    "temporal",
    "nestjs",
    "postgresql",
    "redis"
  ],
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/myloware/myloware.git"
  },
  "lint-staged": {
    "*.{ts,tsx,js,jsx}": [
      "prettier --write"
    ],
    "*.{json,md,yml,yaml}": [
      "prettier --write"
    ]
  }
}
