# Environment Configuration
NODE_ENV=development
LOG_LEVEL=INFO

# Database Configuration
DATABASE_URL=postgresql://myloware:myloware_dev_password@localhost:5432/myloware

# Redis Configuration
REDIS_URL=redis://localhost:6379

# Temporal Configuration
TEMPORAL_HOST=localhost
TEMPORAL_PORT=7233
TEMPORAL_NAMESPACE=default
TEMPORAL_TASK_QUEUE=myloware-tasks
TEMPORAL_DATABASE_URL=postgresql://myloware:myloware_dev_password@localhost:5432/myloware
TEMPORAL_UI_HOST=localhost
TEMPORAL_UI_PORT=8080

# Service Ports Configuration
WORKFLOW_SERVICE_PORT=3001
EVENT_BUS_SERVICE_PORT=3002
MEMORY_SERVICE_PORT=3003
NOTIFICATION_SERVICE_PORT=3004
POLICY_SERVICE_PORT=3005

# API Gateway Configuration
API_GATEWAY_PORT=3000
API_GATEWAY_HOST=0.0.0.0

# MCP Protocol Configuration
MCP_HOST=localhost
MCP_PORT=8080
